generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  SUPER_ADMIN
  ORG_ADMIN
  MANAGER
  STAFF
  VIEWER
}

enum InvoiceStatus {
  DRAFT
  ISSUED
  PAID
}

enum PurchaseRequestStatus {
  DRAFT
  SUBMITTED
  APPROVED
  REJECTED
  CONVERTED
}

enum PurchaseOrderStatus {
  DRAFT
  ISSUED
  RECEIVED
  CANCELLED
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}

enum StockMovementType {
  IN
  OUT
  TRANSFER
}

enum ExpenseStatus {
  DRAFT
  SUBMITTED
  APPROVED
  REJECTED
  PAID
}

enum TaskStatus {
  BACKLOG
  IN_PROGRESS
  DONE
}

enum AttendanceStatus {
  PRESENT
  SICK
  LEAVE
  ABSENT
}

enum ProjectStatus {
  PLANNING
  ACTIVE
  ON_HOLD
  DONE
}

model Org {
  id               String            @id @default(cuid())
  name             String
  code             String            @unique
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  branches         Branch[]
  users            User[]
  customers        Customer[]
  invoices         Invoice[]
  payments         Payment[]
  categories       Category[]
  products         Product[]
  stockLevels      StockLevel[]
  stockMovements   StockMovement[]
  suppliers        Supplier[]
  purchaseRequests PurchaseRequest[]
  purchaseOrders   PurchaseOrder[]
  approvals        Approval[]
  expenses         Expense[]
  journalEntries   JournalEntry[]
  employees        Employee[]
  attendances      Attendance[]
  projects         Project[]
  tasks            Task[]
  auditLogs        AuditLog[]
}

model Branch {
  id               String            @id @default(cuid())
  orgId            String
  name             String
  code             String
  address          String?
  isActive         Boolean           @default(true)
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  org              Org               @relation(fields: [orgId], references: [id], onDelete: Cascade)
  users            User[]
  invoices         Invoice[]
  payments         Payment[]
  stockLevels      StockLevel[]
  stockMovements   StockMovement[]
  purchaseRequests PurchaseRequest[]
  purchaseOrders   PurchaseOrder[]
  expenses         Expense[]
  journalEntries   JournalEntry[]
  employees        Employee[]
  attendances      Attendance[]
  projects         Project[]
  tasks            Task[]
  approvals        Approval[]
  auditLogs        AuditLog[]

  @@unique([orgId, code])
  @@index([orgId])
}

model User {
  id                 String            @id @default(cuid())
  orgId              String
  branchId           String?
  name               String
  email              String
  passwordHash       String
  role               Role
  isActive           Boolean           @default(true)
  lastLoginAt        DateTime?
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
  org                Org               @relation(fields: [orgId], references: [id], onDelete: Cascade)
  branch             Branch?           @relation(fields: [branchId], references: [id], onDelete: SetNull)
  accounts           Account[]
  sessions           Session[]
  requestedApprovals Approval[]        @relation("RequestedApprovals")
  actedApprovals     Approval[]        @relation("ActedApprovals")
  createdPRs         PurchaseRequest[] @relation("CreatedPRs")
  createdPOs         PurchaseOrder[]   @relation("CreatedPOs")
  createdExpenses    Expense[]         @relation("CreatedExpenses")
  approvedExpenses   Expense[]         @relation("ApprovedExpenses")
  postedJournals     JournalEntry[]    @relation("PostedJournals")
  createdJournals    JournalEntry[]    @relation("CreatedJournals")
  createdProjects    Project[]         @relation("CreatedProjects")
  auditLogs          AuditLog[]

  @@unique([orgId, email])
  @@index([orgId])
  @@index([branchId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model AuditLog {
  id        String   @id @default(cuid())
  orgId     String
  branchId  String?
  userId    String?
  action    String
  entity    String
  entityId  String
  details   Json?
  createdAt DateTime @default(now())
  org       Org      @relation(fields: [orgId], references: [id], onDelete: Cascade)
  branch    Branch?  @relation(fields: [branchId], references: [id], onDelete: SetNull)
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([orgId, createdAt])
  @@index([entity, entityId])
}

model Customer {
  id        String    @id @default(cuid())
  orgId     String
  name      String
  email     String?
  phone     String?
  address   String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  org       Org       @relation(fields: [orgId], references: [id], onDelete: Cascade)
  invoices  Invoice[]

  @@index([orgId])
  @@index([name])
}

model Invoice {
  id            String        @id @default(cuid())
  orgId         String
  branchId      String
  customerId    String
  invoiceNumber String
  status        InvoiceStatus @default(DRAFT)
  issueDate     DateTime      @default(now())
  dueDate       DateTime?
  subtotal      Decimal       @db.Decimal(18, 2)
  tax           Decimal       @db.Decimal(18, 2)
  total         Decimal       @db.Decimal(18, 2)
  notes         String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  org           Org           @relation(fields: [orgId], references: [id], onDelete: Cascade)
  branch        Branch        @relation(fields: [branchId], references: [id], onDelete: Cascade)
  customer      Customer      @relation(fields: [customerId], references: [id], onDelete: Restrict)
  items         InvoiceItem[]
  payments      Payment[]

  @@unique([orgId, invoiceNumber])
  @@index([orgId, status])
  @@index([branchId])
}

model InvoiceItem {
  id          String   @id @default(cuid())
  invoiceId   String
  productId   String?
  description String
  quantity    Decimal  @db.Decimal(18, 2)
  unitPrice   Decimal  @db.Decimal(18, 2)
  lineTotal   Decimal  @db.Decimal(18, 2)
  invoice     Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  product     Product? @relation(fields: [productId], references: [id], onDelete: SetNull)

  @@index([invoiceId])
}

model Payment {
  id        String   @id @default(cuid())
  orgId     String
  branchId  String
  invoiceId String
  amount    Decimal  @db.Decimal(18, 2)
  method    String
  reference String?
  paidAt    DateTime @default(now())
  createdAt DateTime @default(now())
  org       Org      @relation(fields: [orgId], references: [id], onDelete: Cascade)
  branch    Branch   @relation(fields: [branchId], references: [id], onDelete: Cascade)
  invoice   Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@index([orgId, paidAt])
  @@index([invoiceId])
}

model Category {
  id        String    @id @default(cuid())
  orgId     String
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  org       Org       @relation(fields: [orgId], references: [id], onDelete: Cascade)
  products  Product[]

  @@unique([orgId, name])
}

model Product {
  id                String                @id @default(cuid())
  orgId             String
  sku               String
  name              String
  categoryId        String?
  unit              String
  cost              Decimal               @db.Decimal(18, 2)
  price             Decimal               @db.Decimal(18, 2)
  lowStockThreshold Int                   @default(10)
  isActive          Boolean               @default(true)
  createdAt         DateTime              @default(now())
  updatedAt         DateTime              @updatedAt
  org               Org                   @relation(fields: [orgId], references: [id], onDelete: Cascade)
  category          Category?             @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  stockLevels       StockLevel[]
  movements         StockMovement[]
  prItems           PurchaseRequestItem[]
  poItems           PurchaseOrderItem[]
  invoiceItems      InvoiceItem[]

  @@unique([orgId, sku])
  @@index([orgId, name])
}

model StockLevel {
  id        String   @id @default(cuid())
  orgId     String
  branchId  String
  productId String
  quantity  Decimal  @db.Decimal(18, 2)
  updatedAt DateTime @updatedAt
  org       Org      @relation(fields: [orgId], references: [id], onDelete: Cascade)
  branch    Branch   @relation(fields: [branchId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([orgId, branchId, productId])
  @@index([orgId, branchId])
}

model StockMovement {
  id           String            @id @default(cuid())
  orgId        String
  branchId     String
  productId    String
  type         StockMovementType
  quantity     Decimal           @db.Decimal(18, 2)
  fromBranchId String?
  toBranchId   String?
  reference    String?
  note         String?
  createdAt    DateTime          @default(now())
  org          Org               @relation(fields: [orgId], references: [id], onDelete: Cascade)
  branch       Branch            @relation(fields: [branchId], references: [id], onDelete: Cascade)
  product      Product           @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@index([orgId, createdAt])
  @@index([branchId])
}

model Supplier {
  id        String            @id @default(cuid())
  orgId     String
  name      String
  email     String?
  phone     String?
  address   String?
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
  org       Org               @relation(fields: [orgId], references: [id], onDelete: Cascade)
  pr        PurchaseRequest[]
  po        PurchaseOrder[]

  @@index([orgId, name])
}

model PurchaseRequest {
  id            String                @id @default(cuid())
  orgId         String
  branchId      String
  supplierId    String?
  number        String
  status        PurchaseRequestStatus @default(DRAFT)
  note          String?
  submittedAt   DateTime?
  approvedAt    DateTime?
  rejectedAt    DateTime?
  createdAt     DateTime              @default(now())
  updatedAt     DateTime              @updatedAt
  org           Org                   @relation(fields: [orgId], references: [id], onDelete: Cascade)
  branch        Branch                @relation(fields: [branchId], references: [id], onDelete: Cascade)
  supplier      Supplier?             @relation(fields: [supplierId], references: [id], onDelete: SetNull)
  createdById   String
  createdBy     User                  @relation("CreatedPRs", fields: [createdById], references: [id], onDelete: Restrict)
  items         PurchaseRequestItem[]
  approvals     Approval[]
  purchaseOrder PurchaseOrder?

  @@unique([orgId, number])
  @@index([orgId, status])
}

model PurchaseRequestItem {
  id                String          @id @default(cuid())
  purchaseRequestId String
  productId         String
  quantity          Decimal         @db.Decimal(18, 2)
  unitCost          Decimal         @db.Decimal(18, 2)
  lineTotal         Decimal         @db.Decimal(18, 2)
  purchaseRequest   PurchaseRequest @relation(fields: [purchaseRequestId], references: [id], onDelete: Cascade)
  product           Product         @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@index([purchaseRequestId])
}

model PurchaseOrder {
  id                String              @id @default(cuid())
  orgId             String
  branchId          String
  supplierId        String?
  purchaseRequestId String?             @unique
  number            String
  status            PurchaseOrderStatus @default(DRAFT)
  issuedAt          DateTime?
  receivedAt        DateTime?
  total             Decimal             @db.Decimal(18, 2)
  note              String?
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  org               Org                 @relation(fields: [orgId], references: [id], onDelete: Cascade)
  branch            Branch              @relation(fields: [branchId], references: [id], onDelete: Cascade)
  supplier          Supplier?           @relation(fields: [supplierId], references: [id], onDelete: SetNull)
  purchaseRequest   PurchaseRequest?    @relation(fields: [purchaseRequestId], references: [id], onDelete: SetNull)
  createdById       String
  createdBy         User                @relation("CreatedPOs", fields: [createdById], references: [id], onDelete: Restrict)
  items             PurchaseOrderItem[]

  @@unique([orgId, number])
  @@index([orgId, status])
}

model PurchaseOrderItem {
  id              String        @id @default(cuid())
  purchaseOrderId String
  productId       String
  quantity        Decimal       @db.Decimal(18, 2)
  unitCost        Decimal       @db.Decimal(18, 2)
  lineTotal       Decimal       @db.Decimal(18, 2)
  purchaseOrder   PurchaseOrder @relation(fields: [purchaseOrderId], references: [id], onDelete: Cascade)
  product         Product       @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@index([purchaseOrderId])
}

model Approval {
  id                String           @id @default(cuid())
  orgId             String
  branchId          String?
  entityType        String
  entityId          String
  status            ApprovalStatus   @default(PENDING)
  note              String?
  requestedById     String
  approverId        String?
  requestedAt       DateTime         @default(now())
  actedAt           DateTime?
  purchaseRequestId String?
  org               Org              @relation(fields: [orgId], references: [id], onDelete: Cascade)
  branch            Branch?          @relation(fields: [branchId], references: [id], onDelete: SetNull)
  requestedBy       User             @relation("RequestedApprovals", fields: [requestedById], references: [id], onDelete: Restrict)
  approver          User?            @relation("ActedApprovals", fields: [approverId], references: [id], onDelete: SetNull)
  purchaseRequest   PurchaseRequest? @relation(fields: [purchaseRequestId], references: [id], onDelete: Cascade)

  @@index([orgId, status])
  @@index([entityType, entityId])
}

model Expense {
  id           String        @id @default(cuid())
  orgId        String
  branchId     String
  vendor       String
  category     String
  amount       Decimal       @db.Decimal(18, 2)
  status       ExpenseStatus @default(DRAFT)
  date         DateTime      @default(now())
  attachment   String?
  note         String?
  createdById  String
  approvedById String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  org          Org           @relation(fields: [orgId], references: [id], onDelete: Cascade)
  branch       Branch        @relation(fields: [branchId], references: [id], onDelete: Cascade)
  createdBy    User          @relation("CreatedExpenses", fields: [createdById], references: [id], onDelete: Restrict)
  approvedBy   User?         @relation("ApprovedExpenses", fields: [approvedById], references: [id], onDelete: SetNull)

  @@index([orgId, status])
  @@index([branchId])
}

model JournalEntry {
  id          String        @id @default(cuid())
  orgId       String
  branchId    String
  entryNumber String
  date        DateTime
  description String
  postedAt    DateTime?
  postedById  String?
  createdById String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  org         Org           @relation(fields: [orgId], references: [id], onDelete: Cascade)
  branch      Branch        @relation(fields: [branchId], references: [id], onDelete: Cascade)
  postedBy    User?         @relation("PostedJournals", fields: [postedById], references: [id], onDelete: SetNull)
  createdBy   User          @relation("CreatedJournals", fields: [createdById], references: [id], onDelete: Restrict)
  lines       JournalLine[]

  @@unique([orgId, entryNumber])
  @@index([orgId, date])
}

model JournalLine {
  id             String       @id @default(cuid())
  journalEntryId String
  accountName    String
  debit          Decimal      @default(0) @db.Decimal(18, 2)
  credit         Decimal      @default(0) @db.Decimal(18, 2)
  note           String?
  journalEntry   JournalEntry @relation(fields: [journalEntryId], references: [id], onDelete: Cascade)

  @@index([journalEntryId])
}

model Employee {
  id           String       @id @default(cuid())
  orgId        String
  branchId     String
  employeeCode String
  name         String
  email        String?
  phone        String?
  position     String
  baseSalary   Decimal      @db.Decimal(18, 2)
  isActive     Boolean      @default(true)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  org          Org          @relation(fields: [orgId], references: [id], onDelete: Cascade)
  branch       Branch       @relation(fields: [branchId], references: [id], onDelete: Cascade)
  attendances  Attendance[]
  tasks        Task[]

  @@unique([orgId, employeeCode])
  @@index([orgId, branchId])
}

model Attendance {
  id         String           @id @default(cuid())
  orgId      String
  branchId   String
  employeeId String
  date       DateTime
  status     AttendanceStatus
  hours      Decimal          @db.Decimal(5, 2)
  note       String?
  createdAt  DateTime         @default(now())
  org        Org              @relation(fields: [orgId], references: [id], onDelete: Cascade)
  branch     Branch           @relation(fields: [branchId], references: [id], onDelete: Cascade)
  employee   Employee         @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@unique([employeeId, date])
  @@index([orgId, branchId])
}

model Project {
  id          String        @id @default(cuid())
  orgId       String
  branchId    String
  code        String
  name        String
  client      String?
  budget      Decimal       @db.Decimal(18, 2)
  status      ProjectStatus @default(PLANNING)
  startDate   DateTime?
  endDate     DateTime?
  createdById String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  org         Org           @relation(fields: [orgId], references: [id], onDelete: Cascade)
  branch      Branch        @relation(fields: [branchId], references: [id], onDelete: Cascade)
  createdBy   User          @relation("CreatedProjects", fields: [createdById], references: [id], onDelete: Restrict)
  tasks       Task[]

  @@unique([orgId, code])
  @@index([orgId, status])
}

model Task {
  id          String     @id @default(cuid())
  orgId       String
  branchId    String
  projectId   String
  title       String
  description String?
  status      TaskStatus @default(BACKLOG)
  assigneeId  String?
  dueDate     DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  org         Org        @relation(fields: [orgId], references: [id], onDelete: Cascade)
  branch      Branch     @relation(fields: [branchId], references: [id], onDelete: Cascade)
  project     Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  assignee    Employee?  @relation(fields: [assigneeId], references: [id], onDelete: SetNull)

  @@index([orgId, status])
  @@index([projectId])
}
